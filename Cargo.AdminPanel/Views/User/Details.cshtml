@using Cargo.AdminPanel.Models
@model UserModel

<div class="dataContainer mb-3 mt-3">
    <h2 class="text-center text-color-blue">Detail of User ID: @Model.Id</h2>

    <table id="example" class="table table-striped table-bordered table-hover text-center w-100">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Pin Code</th>
                <th>Address</th>
                <th>Role Name</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>@Model.Name</td>
                <td>@Model.Surname</td>
                <td>@Model.Email</td>
                <td>@Model.PhoneNumber</td>
                <td>@Model.PinCode</td>
                <td>@Model.Address</td>
                <td>@Model.RoleName</td>
            </tr>
        </tbody>
    </table>

    <a asp-controlle="User" asp-action="Index" class="mt-2 btn btn-dark">Back</a>
</div>