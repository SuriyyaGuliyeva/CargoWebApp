@model List<UserModel>

@{
    int count = 1;
}

<div class="dataContainer mb-3 mt-3">
    <h2 class="text-center text-color-blue">Users</h2>

    <table id="example" class="table table-striped table-bordered table-hover text-center w-100">
        <thead>
            <tr>
                <th>No</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@(count++)</td>
                        <td>@user.Name</td>
                        <td>@user.Surname</td>
                        <td>@user.Email</td>                      
                        <td>
                            <a asp-action="Details" asp-route-userId="@user.Id" class="btn btn-color-blue mr-1 text-white">Details</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="position-relative">
                    <td class="font-weight-bold text-danger text-left position-absolute w-100">List is Empty!</td>
                </tr>
            }
        </tbody>
    </table>
</div>