@model AddShopViewModel

<form asp-controller="Shop" asp-action="Update" enctype="multipart/form-data" class="form-group">
    <h2 class="text-center text-primary"><i>Update Shop ID: @Model.Shop.Id</i></h2>

    <div class="form-group">
        <label asp-for="Shop.Name" class="mr-sm-2">Name:</label>
        <input asp-for="Shop.Name" class="form-control mb-2 mr-sm-2" />
        <span asp-validation-for="Shop.Name" class="text-danger font-weight-bold"></span>
    </div>

    <div class="form-group">
        <label asp-for="Shop.Link" class="mr-sm-2">Link:</label>
        <input asp-for="Shop.Link" class="form-control mb-2 mr-sm-2" />
    </div>

    <div class="form-group">
        <label asp-for="Shop.CoverPhoto" class="mr-sm-2">Photo:</label>

        <div class="custom-file">
            <input type="file" asp-for="Shop.CoverPhoto" class="custom-file-input mb-2 mr-sm-2" id="customFile" />
            <label for="customFile" class="custom-file-label mr-sm-2">Choose Photo</label>
            <span asp-validation-for="Shop.CoverPhoto" class="text-danger font-weight-bold"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Shop.SelectedCountry" class="mr-sm-2">Select Country:</label>

        <select name="selectedCountry" asp-for="Shop.SelectedCountry" class="custom-select">         
            @if (Model.CountriesList != null)
            {
                <option value="noselectedvalue" disabled>Select Country</option>

                foreach (var item in Model.CountriesList)
                {
                    if (item.Text == Model.Shop.SelectedCountry.Name)
                    {
                        <option value=@item.Value selected>@Model.Shop.SelectedCountry.Name</option>
                    }
                    else
                    {
                        <option value=@item.Value>@item.Text</option>
                    }
                }
            }
            else
            {
                <option value="noselectedvalue" selected disabled>Select Country</option>
            }
        </select>

        <span asp-validation-for="Shop.SelectedCountry" class="text-danger font-weight-bold"></span>
    </div>

    <div class="form-group">
        <label asp-for="Shop.SelectedCategory" class="mr-sm-2">Select Category:</label>

        <select name="selectedCategory" asp-for="Shop.SelectedCategory" class="custom-select">
            @if (Model.CategoriesList != null)
            {
                <option value="noselectedvalue" disabled>Select Category</option>

                foreach (var item in Model.CategoriesList)
                {
                    if (item.Text == Model.Shop.SelectedCategory.Name)
                    {
                        <option value=@item.Value selected>@Model.Shop.SelectedCategory.Name</option>
                    }
                    else
                    {
                        <option value=@item.Value>@item.Text</option>
                    }
                }
            }
            else
            {
                <option value="noselectedvalue" selected disabled>Select Category</option>
            }
        </select>

        <span asp-validation-for="Shop.SelectedCategory" class="text-danger font-weight-bold"></span>
    </div>

    @{
        if (Model.Shop != null && Model.Shop.Id > 0)
        {
            <input type="hidden" value="@Model.Shop.Id" name="Shop.Id" />
            <input type="hidden" value="@Model.Shop.CoverPhotoUrl" name="Shop.CoverPhotoUrl" />
        }

        if (ViewBag.IsExistName != null)
        {
            <p class="font-weight-bold text-danger">@ViewBag.IsExistName</p>
        }
    }

    <a asp-action="Index" class="btn btn-dark">Back</a>
    <button type="submit" class="btn btn-warning">Update</button>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}