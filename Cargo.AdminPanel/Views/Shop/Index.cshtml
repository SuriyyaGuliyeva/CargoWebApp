@model ShopViewModel

@{
    int count = 1;
}

<div class="dataContainer mb-3 mt-3">
    <h2 class="text-center text-primary"><i>List of Shops</i></h2>

    <a asp-action="Add" class="btn btn-primary mb-3">Add Shop</a>

    <table id="example" class="table table-striped table-bordered table-hover text-center w-100">
        <thead>
            <tr>
                <th>Shop No</th>
                <th>Shop Name</th>
                <th>Link</th>
                <th>Country Name</th>
                <th>Category Name</th>
                <th>Photo</th>
                <th>Created Date/Time</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @if (Model.Shops.Count > 0)
            {
                foreach (var shop in Model.Shops)
                {
                    <tr>
                        <td>@(count++)</td>
                        <td>@shop.Name</td>
                        <td><a href="@shop.Link" target="_blank" style="text-underline-offset: unset">@shop.Link</a></td>
                        <td>@shop.CountryName</td>
                        <td>@shop.CategoryName</td>
                        <td>@shop.Photo</td>
                        <td>@shop.CreationDateTime</td>
                        <td>
                            <a asp-action="Update" asp-route-shopId="@shop.Id" class="btn btn-warning">Update</a>
                            <a href="#" data-id="@shop.Id" data-target="#DeleteRecord" data-toggle="modal"
                       class="btn btn-danger delete">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="position-relative">
                    <td class="font-weight-bold text-danger text-left position-absolute w-100">List is Empty!</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- START - Modal for Delete Confirmation -->
    <div class="modal fade" tabindex="-1" role="dialog" id="DeleteRecord">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Shop Delete Confirmation</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <p class="text-danger font-weight-bold">Are you sure want to delete this record?</p>
                </div>

                <div class="modal-footer">
                    <form method="get" asp-controller="Shop" asp-action="Delete">
                        <button type="button" class="btn btn-dark" data-dismiss="modal">No</button>
                        <button type="submit" class="btn btn-danger">Yes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- END - Modal for Delete Confirmation -->
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script>
     $(document).ready(function () {
        $('table .delete').on('click', function () {
            var id = $(this).data("id");

            $.ajax({
                type: 'GET',
                url: 'Shop/Delete/',
                data: { "shopId": id }
            })
        });
    });
</script>
