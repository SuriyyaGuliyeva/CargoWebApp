@model AddCategoryViewModel

<form asp-controller="Category" asp-action="Update" class="form-group">
    <h2 class="text-center text-color-blue">Update Category ID: @Model.Category.Id</h2>

    <div class="form-group">
        <label asp-for="Category.Name" class="mr-sm-2">Name:</label>
        <input asp-for="Category.Name" class="form-control mb-2 mr-sm-2" />

        <span asp-validation-for="Category.Name" class="text-danger font-weight-bold"></span>
    </div>

    @{
        if (Model.Category != null && Model.Category.Id > 0)
        {
            <input type="hidden" value="@Model.Category.Id" name="Category.Id" />
        }

        if (ViewBag.IsExistName != null)
        {
            <p class="font-weight-bold text-danger">@ViewBag.IsExistName</p>
        }
    }

    <a asp-action="Index" class="btn btn-dark">Back</a>
    <button type="submit" class="btn btn-warning">Update</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}