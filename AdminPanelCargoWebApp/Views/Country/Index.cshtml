@using AdminPanelCargoWebApp.ViewModels.Country

@model CountryViewModel

@{
    int count = 1;
}

<div class="dataContainer mb-3 mt-3">
    <h1 style="text-align:center;">List of Countries</h1>

    <table id="example" class="table table-striped table-bordered text-center w-100">
        <thead>
            <tr>
                <th>No</th>
                <th>Name</th>
                <th>Created Date/Time</th>      
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Countries)
            {
                <tr>
                    <td>@(count++)</td>
                    <td>@item.Name</td>
                    <td>@item.CreationDateTime</td>
                    <td>
                        <a asp-action="" class="btn btn-warning">Edit</a>
                    </td>
                     <td>
                         <a asp-action="" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table> 

    <a asp-action="" class="btn btn-primary">Add</a>
</div>